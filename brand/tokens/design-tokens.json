{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "mdp": {
    "color": {
      "primitive": {
        "black": { "$value": "#000000", "$type": "color" },
        "nearBlack": { "$value": "#1a1a1a", "$type": "color" },
        "darkGray": { "$value": "#333333", "$type": "color" },
        "midGray": { "$value": "#666666", "$type": "color" },
        "lightGray": { "$value": "#999999", "$type": "color" },
        "paleGray": { "$value": "#e0e0e0", "$type": "color" },
        "offWhite": { "$value": "#f5f5f5", "$type": "color" },
        "white": { "$value": "#ffffff", "$type": "color" }
      },
      "semantic": {
        "light": {
          "bg": {
            "primary": { "$value": "{mdp.color.primitive.white}", "$type": "color" },
            "secondary": { "$value": "{mdp.color.primitive.offWhite}", "$type": "color" },
            "tertiary": { "$value": "{mdp.color.primitive.paleGray}", "$type": "color" }
          },
          "text": {
            "primary": { "$value": "{mdp.color.primitive.nearBlack}", "$type": "color" },
            "secondary": { "$value": "{mdp.color.primitive.darkGray}", "$type": "color" },
            "tertiary": { "$value": "{mdp.color.primitive.midGray}", "$type": "color" },
            "disabled": { "$value": "{mdp.color.primitive.lightGray}", "$type": "color" }
          },
          "border": {
            "default": { "$value": "{mdp.color.primitive.paleGray}", "$type": "color" },
            "strong": { "$value": "{mdp.color.primitive.midGray}", "$type": "color" }
          }
        },
        "dark": {
          "bg": {
            "primary": { "$value": "{mdp.color.primitive.nearBlack}", "$type": "color" },
            "secondary": { "$value": "#2a2a2a", "$type": "color" },
            "tertiary": { "$value": "{mdp.color.primitive.darkGray}", "$type": "color" }
          },
          "text": {
            "primary": { "$value": "{mdp.color.primitive.offWhite}", "$type": "color" },
            "secondary": { "$value": "#cccccc", "$type": "color" },
            "tertiary": { "$value": "{mdp.color.primitive.lightGray}", "$type": "color" },
            "disabled": { "$value": "{mdp.color.primitive.midGray}", "$type": "color" }
          },
          "border": {
            "default": { "$value": "{mdp.color.primitive.darkGray}", "$type": "color" },
            "strong": { "$value": "{mdp.color.primitive.midGray}", "$type": "color" }
          }
        }
      },
      "accent": {
        "teal": { "$value": "#00897B", "$type": "color", "$description": "Future accent option - medical/clinical" },
        "indigo": { "$value": "#3F51B5", "$type": "color", "$description": "Future accent option - technical" },
        "coral": { "$value": "#FF7043", "$type": "color", "$description": "Future accent option - warm/approachable" }
      },
      "avoid": {
        "uvaNavy": { "$value": "#232D4B", "$type": "color", "$description": "Do not use - institutional confusion" },
        "uvaOrange": { "$value": "#E57200", "$type": "color", "$description": "Do not use - institutional confusion" },
        "pureRed": { "$value": "#FF0000", "$type": "color", "$description": "Do not use - medical alarm association" }
      }
    },
    "typography": {
      "fontFamily": {
        "primary": { "$value": "'JetBrains Mono', 'Fira Code', 'Source Code Pro', 'Consolas', 'Monaco', monospace", "$type": "fontFamily" }
      },
      "fontWeight": {
        "thin": { "$value": "100", "$type": "fontWeight" },
        "extraLight": { "$value": "200", "$type": "fontWeight" },
        "light": { "$value": "300", "$type": "fontWeight" },
        "regular": { "$value": "400", "$type": "fontWeight" },
        "medium": { "$value": "500", "$type": "fontWeight" },
        "semiBold": { "$value": "600", "$type": "fontWeight" },
        "bold": { "$value": "700", "$type": "fontWeight" },
        "extraBold": { "$value": "800", "$type": "fontWeight" }
