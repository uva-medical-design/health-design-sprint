          "caption": { "$value": "10pt", "$type": "dimension" },
          "code": { "$value": "11pt", "$type": "dimension" }
        },
        "digital": {
          "h1": { "$value": "48px", "$type": "dimension" },
          "h2": { "$value": "32px", "$type": "dimension" },
          "h3": { "$value": "24px", "$type": "dimension" },
